{
    "extends": ["standard"],
    "env": {
        "jest": true
    },
    "rules": {
        "template-curly-spacing": ["error", "always"],
        "comma-dangle": ["error", "always-multiline"],
        "no-unused-expressions": 0,
        "handle-callback-err": 0,
        "max-len": ["error", 80],
        "indent": ["error", 4],
        "no-useless-escape": 0,
        "no-var": "error"
    }
}
